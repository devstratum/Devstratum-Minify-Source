<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9" type="plugin" group="system" method="upgrade">
    <name>Devstratum JMP Minify Source</name>
    <version>1.3</version>
    <author>Sergey Osipov</author>
    <authorEmail>info@devstratum.ru</authorEmail>
    <authorUrl>https://devstratum.ru</authorUrl>
    <copyright>Copyright Â© 2021 Sergey Osipov. All Rights Reserved</copyright>
    <license>MIT/X11 License</license>
    <creationDate>August 2021</creationDate>
    <description>
        <![CDATA[
            <p><b>Devstratum JMP Minify Source</b> - Plugin for minify CSS and JavaScript source code.
            Developed by <a href="https://devstratum.ru" target="_blank">devstratum</a>.</p>
        ]]>
    </description>
    <files>
        <filename plugin="dvstrminifysource">dvstrminifysource.php</filename>
        <filename>dvstrminifysource.xml</filename>
        <folder>clearclass</folder>
        <folder>language</folder>
        <folder>vendor</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field type="note" class="alert alert-info" label="PLG_DVSTR_MINIFYSOURCE_NOTE_LIBRARIES"/>
                <field
                        name="lib_behavior"
                        type="radio"
                        default="0"
                        label="PLG_DVSTR_MINIFYSOURCE_BEHAVIOR"
                        description="PLG_DVSTR_MINIFYSOURCE_BEHAVIOR_DESC"
                        class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="lib_bootstrap"
                        type="radio"
                        default="0"
                        label="PLG_DVSTR_MINIFYSOURCE_BOOTSTRAP"
                        description="PLG_DVSTR_MINIFYSOURCE_BOOTSTRAP_DESC"
                        class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="lib_jquery"
                        type="radio"
                        default="0"
                        label="PLG_DVSTR_MINIFYSOURCE_JQUERY"
                        description="PLG_DVSTR_MINIFYSOURCE_JQUERY_DESC"
                        class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field type="note" class="alert alert-info" label="PLG_DVSTR_MINIFYSOURCE_NOTE_CSS"/>
                <field
                        name="minify_css"
                        type="radio"
                        default="0"
                        label="PLG_DVSTR_MINIFYSOURCE_MINIFY_CSS"
                        description="PLG_DVSTR_MINIFYSOURCE_MINIFY_CSS_DESC"
                        class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="unified_css"
                        type="radio"
                        default="0"
                        label="PLG_DVSTR_MINIFYSOURCE_UNIFIED_CSS"
                        description="PLG_DVSTR_MINIFYSOURCE_UNIFIED_CSS_DESC"
                        class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="vartime_css"
                        type="radio"
                        default="0"
                        label="PLG_DVSTR_MINIFYSOURCE_VARTIME_CSS"
                        description="PLG_DVSTR_MINIFYSOURCE_VARTIME_CSS_DESC"
                        class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="extensions_css"
                        type="checkboxes"
                        label="PLG_DVSTR_MINIFYSOURCE_EXT_IMG"
                        description="PLG_DVSTR_MINIFYSOURCE_EXT_IMG_DESC">
                    <option value="gif">gif</option>
                    <option value="png">png</option>
                    <option value="jpg">jpg</option>
                    <option value="svg">svg</option>
                </field>

                <field type="note" class="alert alert-info" label="PLG_DVSTR_MINIFYSOURCE_NOTE_JS"/>
                <field
                        name="minify_js"
                        type="radio"
                        default="0"
                        label="PLG_DVSTR_MINIFYSOURCE_MINIFY_JS"
                        description="PLG_DVSTR_MINIFYSOURCE_MINIFY_JS_DESC"
                        class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="defer_js"
                        type="radio"
                        default="0"
                        label="PLG_DVSTR_MINIFYSOURCE_DEFER_JS"
                        description="PLG_DVSTR_MINIFYSOURCE_DEFER_JS_DESC"
                        class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>